<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_800"
    tools:context=".presentation.station.StationFragment">

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/station_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ugs"
            android:fontFamily="@font/roboto_bold"
            android:layout_width="0dp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            tools:text="UGS\n2330" />

        <TextView
            android:id="@+id/eus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold"
            tools:text="EUS\n10000" />

        <TextView
            android:id="@+id/ds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/gray"
            android:fontFamily="@font/roboto_bold"
            tools:text="DS\n1023" />
    </LinearLayout>

    <TextView
        android:id="@+id/spaceship_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/station_info"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black_900"
        android:textSize="26sp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Sukru Space"/>

    <TextView
        android:id="@+id/spaceship_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEALTH\n100"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/spaceship_time"
        app:layout_constraintTop_toBottomOf="@id/spaceship_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/spaceship_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME\n100"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/spaceship_health"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/spaceship_name"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/white"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/spaceship_health"
        android:hint="@string/search"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/station_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_space_station"/>

</androidx.constraintlayout.widget.ConstraintLayout>